<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_security_title">

        <SwitchPreferenceCompat
            app:key="enablePin"
            app:title="@string/preferences_security_pin" />

        <SwitchPreferenceCompat
            app:key="enableBiometric"
            app:title="@string/preferences_security_biometric" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preferences_display_title">

    <SwitchPreferenceCompat
        app:key="groupIntoTwoDigits"
        app:title="@string/preferences_display_grouping" />

    </PreferenceCategory>
    
</PreferenceScreen>